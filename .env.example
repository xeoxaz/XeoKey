# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
# Change this to your MongoDB connection string for production
MONGODB_URI=mongodb://localhost:27017

# Security (REQUIRED for production)
# IMPORTANT: Generate secure keys using: openssl rand -base64 32
SESSION_SECRET=change-this-secret-key-in-production-at-least-32-characters-long
ENCRYPTION_KEY=change-this-encryption-key-in-production-generate-secure-key

# Debug & Logging Configuration
# Set DEBUG=true or LOG_LEVEL=debug to enable verbose debug logging
DEBUG=false
LOG_LEVEL=info

# Production Settings
# Uncomment and set these for production deployment
# NODE_ENV=production
# PORT=3000
# MONGODB_URI=mongodb://your-production-mongodb-url
# SESSION_SECRET=your-secure-session-secret-32-chars-minimum
# ENCRYPTION_KEY=your-secure-encryption-key-generate-with-openssl
